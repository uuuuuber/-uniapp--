.back {
  width: 100%;
  height: 70rpx;
  margin-top: 50rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.back image {
  width: 40rpx;
  height: 40rpx;
  padding-top: 15rpx;
}
.imgBg {
  width: 100%;
  height: 400rpx;
}
.price-row {
  padding: 0 10rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.price-row .left {
  font-size: 32rpx;
  color: red;
}
.price-row .rigth {
  border: 1 solid red;
  background-color: red;
  border-radius: 5rpx;
  color: #fff;
}
.detail {
  padding: 0 10rpx;
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.detail .shanjia {
  background-color: red;
  width: 50rpx;
  height: 35rpx;
  border-radius: 15rpx;
  color: #fff;
  font-size: 25rpx;
}
.detail .detailTitle {
  font-size: 30rpx;
  font-weight: 800;
  margin-left: 10rpx;
}
.foot {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-around;
}
.foot .icon {
  width: 40%;
  height: 100%;
  display: flex;
}
.foot .icon image {
  width: 32rpx;
  height: 32rpx;
}
.foot .icon .box {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 33.33%;
  justify-content: center;
  align-items: center;
}
.foot .apply {
  width: 50%;
  height: 80%;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.foot .apply .jiaru {
  width: 50%;
  height: 100%;
  background-color: #F09819;
  font-size: 28rpx;
  padding-left: 10rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.foot .apply .liji {
  width: 50%;
  height: 100%;
  background-color: #FF512F;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}